<Window x:Class="AICO_Desktop.View.StartLogo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AICO_Desktop.View"
        mc:Ignorable="d"
        Title="AICO" Height="680" Width="800" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="/View/aico.jpg"/>
    </Window.Background>
    <Grid>
        <StackPanel>
            <Label HorizontalAlignment="Right" Foreground="BlueViolet" Content="Accounting and inventory of computers and office equipment of the organization"/>
        </StackPanel>
        <StackPanel VerticalAlignment="Top" Margin="210,410,0,0">
            <Label FontSize="30" FontWeight="Bold" Foreground="CornflowerBlue" Content="Облік та інвентаризація"/>
            <Label Margin="50,0,0,0" FontSize="30" Foreground="CornflowerBlue" FontWeight="Bold" Content="комп'ютерів та оргтехніки"/>
            <Label Margin="200,0,0,0" FontSize="30" Foreground="CornflowerBlue" FontWeight="Bold" Content="організації"/>
        </StackPanel>
    </Grid>
</Window>
